<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_song_albumImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/list_song_songName"
        android:layout_toRightOf="@+id/list_song_albumImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Song Title"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/list_song_albumName"
        android:layout_below="@+id/list_song_songName"
        android:layout_toRightOf="@+id/list_song_albumImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Album Title"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/list_song_artistName"
        android:layout_below="@+id/list_song_albumName"
        android:layout_toRightOf="@+id/list_song_albumImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Artist Name"
        android:layout_margin="5dp"/>

</RelativeLayout>