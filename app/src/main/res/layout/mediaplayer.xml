<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/mediaplayer_layout">

    <ImageView
        android:id="@+id/mediaplayer_albumImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/mediaplayer_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mediaplayer_albumImage"
        android:hint="Song Title"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/mediaplayer_artistName"
        android:layout_below="@+id/mediaplayer_songName"
        android:layout_toRightOf="@+id/mediaplayer_albumImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Album Title"
        android:layout_margin="10dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_play_arrow"
        />

</RelativeLayout>